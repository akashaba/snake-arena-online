{
  "name": "snake-arena-online",
  "version": "1.0.0",
  "description": "Neon Snake Arena - Multiplayer Snake Game",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names \"BACKEND,FRONTEND\" --prefix-colors \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uv run python run.py",
    "dev:frontend": "cd frontend && npm run dev",
    "backend": "npm run dev:backend",
    "frontend": "npm run dev:frontend",
    "test:backend": "cd backend && uv run pytest -v",
    "test:frontend": "cd frontend && npm test",
    "build:frontend": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
